{
  "extends": "standard",
  "plugins": ["react", "jsx-a11y", "import"],
  "rules": {
    "comma-dangle": "off",
    "react/prefer-stateless-function": "off",
    "react/prop-types": "off",
    "react/no-danger": "off",
    "prefer-destructuring": "off",
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["to"],
        "aspects": ["noHref", "invalidHref", "preferButton"]
      }
    ]
  },
  "settings": {
    "import/core-modules": []
  },
  "env": {
    "browser": true
  }
}
